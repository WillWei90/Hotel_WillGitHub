@model IEnumerable<HotelBookingSystem.Models.Room>

@{
    ViewData["Title"] = "可預訂房型";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">可預訂房型</h2>
    <div class="alert alert-info text-center mt-3">
        <strong>提示：</strong>目前只開放預訂三個月內的日期，超出此範圍的日期無法選擇。
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (ViewBag.Message != null)
    {
        <p class="alert alert-info text-center">@ViewBag.Message</p>
    }
    else if (!Model.Any())
    {
        <p class="alert alert-warning text-center">目前沒有可用的房型。</p>
    }
    else
    {
        <table class="table table-striped table-bordered mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>房間編號</th>
                    <th>房間名稱</th>
                    <th>價格 (每晚)</th>
                    <th>類型</th>
                    <th>房間內容</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in Model)
                {
                    <tr>
                        <td>@room.RoomNo</td>
                        <td>@room.RoomName</td>
                        <td>@room.Price</td>
                        <td>@room.RoomType</td>
                        <td>@room.RoomContent</td>
                        <td>
                            <a href="@Url.Action("ReserveRoomForm", "Order", new { roomNo = room.RoomNo })" class="btn btn-primary">預訂</a>
                            <button class="btn btn-info check-availability" data-roomno="@room.RoomNo">查看已被訂日</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>


<!-- 可用性檢查 Modal -->
<div id="availability-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">已被預訂日期</h5>
            </div>
            <div class="modal-body">
                <div id="availability-dates" class="text-center">
                    <p>正在加載可用日期...</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            $(".check-availability").click(function () {
                var roomNo = $(this).data("roomno");
                var button = $(this);
                button.prop("disabled", true).text("加載中...");

                $("#availability-dates").html("<p>正在加載可用日期...</p>");

                $.ajax({
                    url: `/Order/CheckRoomAvailability/${roomNo}`,
                    type: "GET",
                            success: function (response) {
            if (response.success) {
                        let bookings = response.bookings; // 這是後端返回的具體日期清單
                let availabilityHtml = bookings.map(booking => {
                    return `<p>已預訂日期：<strong>${booking}</strong></p>`; // 顯示每個日期
                }).join("");

                if (!availabilityHtml) {
                    availabilityHtml = "<p>該房間目前完全可用。</p>";
                }
                $("#availability-dates").html(availabilityHtml);
            } else {
                $("#availability-dates").html(`<p class="text-danger">${response.message || "無法檢查房間可用性。"}</p>`);
            }
            $("#availability-modal").modal("show");
        },
                    error: function () {
                        $("#availability-dates").html("<p class='text-danger'>檢查房間可用性時發生錯誤，請稍後再試！</p>");
                    },
                    complete: function () {
                        button.prop("disabled", false).text("查看已被訂日");
                    }
                });
            });
        });
    </script>
}
